# Define colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
CYAN='\033[0;36m'
NC='\033[0m' # No color

# Run lint
echo "${CYAN}üîç Running lint...${NC}"
if yarn lint; then
    echo "${GREEN}‚úÖ Lint passed! Checking for format changes...${NC}"

    # Run format and check if files were modified
    yarn format
    if [ -n "$(git status --porcelain)" ]; then
        echo "${RED}‚ùå Some files were modified by 'yarn format'.${NC}"
        echo "${YELLOW}Please review the changes, commit them, and push again.${NC}"
        exit 1
    fi

    # Proceed to build if no changes
    echo "${GREEN}‚úÖ No format changes. Proceeding to build...${NC}"
    yarn build
else
    echo "${YELLOW}‚ö†Ô∏è Lint issues found! Running format and lint:fix...${NC}"
    yarn format && yarn lint:fix

    # Check if any files were modified after format and lint:fix
    if [ -n "$(git status --porcelain)" ]; then
        echo "${RED}‚ùå Some files were modified by 'yarn format' and 'yarn lint:fix'.${NC}"
        echo "${YELLOW}Please review the changes, commit them, and push again.${NC}"
        exit 1
    fi

    # Run lint again to ensure it's clean after fixes
    # echo "${CYAN}üîç Re-running lint after fix...${NC}"
    # if yarn lint; then
    #     echo "${GREEN}‚úÖ Lint issues fixed! Proceeding to build...${NC}"
    #     yarn build
    # else
    #     echo "${RED}‚ùå Lint still has issues. Please fix them manually before pushing.${NC}"
    #     exit 1
    # fi
fi
